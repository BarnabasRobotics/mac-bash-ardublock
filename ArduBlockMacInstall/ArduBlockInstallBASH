#!/bin/sh

FILE='ardublock-all-withNewPing.jar'
if test -f "./$FILE" ; then
    echo "Copying $FILE to /Applications/Arduino/tools/ArduBlockTool/tool..."
    mkdir -p /Applications/Arduino/tools/ArduBlockTool/tool
    cp ./$FILE /Applications/Arduino/tools/ArduBlockTool/tool/
else
    echo "$FILE does not exist"
fi

LIB='NewPing'
if test -d "./$LIB" ; then
    echo "Installing $LIB Library to /Applications/Arduino/libraries"
    mkdir -p /Applications/Arduino/libraries
    cp -r ./$LIB /Applications/Arduino/libraries/
else
    echo "$LIB does not exist"
fi

DRIVER='CH34x_Install_V1.3.zip'
if test -f "./$DRIVER"; then
    echo "CH34x Driver exists"
    unzip $DRIVER
    echo "Running install"
    chmod +x $DRIVER
    ./$DRIVER
else
    echo "$DRIVER does not exist"
fi
